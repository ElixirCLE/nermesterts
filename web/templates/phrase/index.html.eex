<h2>Listing phrases</h2>

<table class="table">
  <thead>
    <tr>
      <th>Message</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for phrase <- @phrases do %>
    <tr>
      <td><%= phrase.message %></td>

      <td class="text-right">
        <%= if logged_in?(@conn) do %>
          <%= link "Edit", to: phrase_path(@conn, :edit, phrase), class: "btn btn-default btn-xs" %>
          <%= link "Delete", to: phrase_path(@conn, :delete, phrase), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
        <% end %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= if logged_in?(@conn) do %>
  <%= link "New phrase", to: phrase_path(@conn, :new) %>
<% end %>
